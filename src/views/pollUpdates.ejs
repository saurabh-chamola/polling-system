<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Real-Time Polling System</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin-top: 50px;
        }

        #welcome {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        #notification {
            font-size: 18px;
            margin: 20px auto;
            padding: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
            max-width: 600px;
            background-color: #f9f9f9;
        }

        .poll {
            margin-bottom: 30px;
            border: 1px solid #ccc;
            padding: 15px;
            border-radius: 5px;
            background-color: #f0f0f0;
        }

        .poll-option {
            margin: 10px 0;
        }

        #polls-container {
            max-width: 600px;
            margin: 0 auto;
        }

        h2 {
            margin-top: 20px;
            color: #333;
        }
    </style>
</head>

<body>
    <div id="welcome">Welcome to the Polling System!!!!!! (Whenever a user votes in any poll, real-time notifications will be displayed here. We can also monitor the live vote counts for any poll. Additionally, you can view the leaderboard )</div>

    <div id="notification"></div>

    <div id="polls-container">
        <h2>Poll Questions</h2>
        <% data?.forEach(poll=> { %>
            <div class="poll">
                <div id="poll-question">Question (ID: <%= poll?.id %>): <%= poll?.poll %>
                </div>
                <div id="poll-options">
                    <% poll?.Options.forEach(option=> { %>
                        <div class="poll-option" id="option-<%= option.id %>">
                            <%= option?.option %>: <span id="count-<%= option.id %>">
                                    <%= option.count %>
                                </span> votes
                        </div>
                        <% }) %>
                </div>
            </div>
            <% }) %>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();

        socket.on('notification', (data) => {
            console.log('Received notification:', data); // Log the notification data
            const notificationDiv = document.getElementById('notification');
            notificationDiv.innerHTML += `<p>${data.message}</p>`;

            // Update vote counts in real-time
            data.pollOptions.forEach(option => {
                const countSpan = document.getElementById(`count-${option.id}`);
                if (countSpan) {
                    countSpan.innerText = option.count;
                }
            });
        });

        socket.on('connect', () => {
            console.log('Connected to server');
        });

        socket.on('disconnect', () => {
            console.log('Disconnected from server');
        });
    </script>
</body>

</html>
